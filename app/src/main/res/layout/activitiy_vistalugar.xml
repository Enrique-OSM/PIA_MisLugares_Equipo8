<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/NombreLugarTxt"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Nombre de el lugar"
            android:textSize="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tipoIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Telefono"
                android:src="@drawable/ic_locationicon" />

            <TextView
                android:id="@+id/tipoText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Tipo"
                android:textSize="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/direccionIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Telefono"
                android:src="@drawable/ic_locationicon" />

            <TextView
                android:id="@+id/direccionText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Direccion"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phoneIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Telefono"
                android:src="@drawable/ic_menu_call" />

            <TextView
                android:id="@+id/phoneText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Telefono"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/paginaWebIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Telefono"
                android:src="@drawable/continentes" />

            <TextView
                android:id="@+id/paginaWebText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Url"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/comentario"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Telefono"
                android:src="@drawable/ic_comentarioicon" />

            <TextView
                android:id="@+id/comentarioText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Comentario"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/fechaIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="fechaIcon"
                android:src="@drawable/baseline_calendar_today_24" />

            <TextView
                android:id="@+id/fechaText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Fecha"
                android:textSize="20dp" />
            <ImageView
                android:id="@+id/horaIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="horaIcon"
                android:src="@drawable/baseline_access_time_24" />

            <TextView
                android:id="@+id/horaText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="hora"
                android:textSize="20dp" />
        </LinearLayout>
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="fotografia"
                app:srcCompat="@mipmap/imagedefault_foreground" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <ImageView
                    android:id="@+id/camaraicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="logo camara"
                    app:srcCompat="@drawable/camara" />

                <Space
                    android:layout_width="4dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/galeryicon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/baseline_image_24" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
</ScrollView>